<h1>Your Collections</h1>

<div class="mb-4">
  <a href="/collections/create" class="btn btn-primary">
    <i class="bi bi-plus-lg"></i> Create New Collection
  </a>
</div>

<% if (collections.length === 0) { %>
<div class="alert alert-info text-center">
  You have no collections yet. Start by creating a new collection.
</div>
<% } else { %>
<div class="row row-cols-1 row-cols-md-3 g-4">
  <% collections.forEach(collection => { %>
  <div class="col">
    <div
      class="card h-100"
      style="border-color: <%= collection.color || '#ddd' %>"
    >
      <div class="card-body">
        <h5 class="card-title">
          <a href="/collections/<%= collection._id %>">
            <%= collection.name %>
          </a>
          <% if (collection.isPublic) { %>
          <span class="badge bg-success ms-2" title="Public Collection"
            >Public</span
          >
          <% } else { %>
          <span class="badge bg-secondary ms-2" title="Private Collection"
            >Private</span
          >
          <% } %>
        </h5>
        <p class="card-text">
          <%= collection.description || 'No description provided.' %>
        </p>
      </div>
      <div class="card-footer d-flex justify-content-between">
        <a
          href="/collections/<%= collection._id %>/edit"
          class="btn btn-sm btn-outline-primary"
          >Edit</a
        >
        <a
          href="/collections/<%= collection._id %>/delete"
          class="btn btn-sm btn-outline-danger"
          onclick="return confirm('Are you sure you want to delete this collection?');"
          >Delete</a
        >
      </div>
    </div>
  </div>
  <% }) %>
</div>
<% } %>
