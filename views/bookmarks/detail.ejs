<h1><%= bookmark.title %></h1>

<div class="mb-3">
  <a
    href="<%= bookmark.url %>"
    target="_blank"
    rel="noopener noreferrer"
    class="btn btn-outline-primary"
  >
    Visit Link
  </a>
</div>

<div class="mb-3">
  <strong>URL:</strong>
  <a href="<%= bookmark.url %>" target="_blank" rel="noopener noreferrer"
    ><%= bookmark.url %></a
  >
</div>

<% if (bookmark.faviconUrl) { %>
<div class="mb-3">
  <strong>Favicon:</strong><br />
  <img
    src="<%= bookmark.faviconUrl %>"
    alt="Favicon"
    style="max-width: 64px; max-height: 64px"
  />
</div>
<% } %> <% if (bookmark.description) { %>
<div class="mb-3">
  <strong>Description:</strong>
  <p><%= bookmark.description %></p>
</div>
<% } %> <% if (bookmark.tags && bookmark.tags.length) { %>
<div class="mb-3">
  <strong>Tags:</strong>
  <ul class="list-inline">
    <% bookmark.tags.forEach(tag => { %>
    <li class="list-inline-item badge bg-secondary"><%= tag %></li>
    <% }); %>
  </ul>
</div>
<% } %> <% if (bookmark.collections && bookmark.collections.length) { %>
<div class="mb-3">
  <strong>Collections:</strong>
  <ul>
    <% bookmark.collections.forEach(collection => { %>
    <li>
      <a href="/collections/<%= collection._id %>"><%= collection.name %></a>
    </li>
    <% }); %>
  </ul>
</div>
<% } %>

<div class="mt-4">
  <a href="/bookmarks/<%= bookmark._id %>/edit" class="btn btn-warning">Edit</a>
  <form
    action="/bookmarks/<%= bookmark._id %>/delete"
    method="POST"
    class="d-inline"
    onsubmit="return confirm('Are you sure you want to delete this bookmark?');"
  >
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
  <a href="/bookmarks" class="btn btn-secondary ms-2">Back to Bookmarks</a>
</div>
